<div class="box">
<h2>Books</h2>
<table class="table">
<tr>
	<th>Title</th>
	<th>Body</th>
</tr>
<% @books.each do |book| %>
<tr class="box">
	<td><%= book.title %></td>
	<td><%= book.body %></td>
	<td><%= link_to "Show",book_path(book) %></td>
	<td><%= link_to "Edit",edit_book_path(book) %></td>
	<td><%= link_to "Destroy",book_path(book),method: :delete %></td>
	
</tr>
<% end %>
</table>

<h2>New book</h2>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>

    <% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
    <p>Title</p>
    <%= f.text_field :title %>
 
    <p>Body</p>
    <%= f.text_area :body %><br>
 
    <%= f.submit 'Create Book' %>
 <% end %>
</div>